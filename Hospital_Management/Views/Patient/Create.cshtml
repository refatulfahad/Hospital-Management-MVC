@{
}

@model Patient

<form action="Create" method="post">
	<div class="border p-3 mt-4">
		<div class="row pd-2">
			<h2 class="text-primary">Add Patient</h2>
		</div>
		<hr />
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

			@*<label for="Name">Name:</label><br>
			<input type="text" id="Name"><br>*@
		</div>

		<div class="mb-3">
			<label asp-for="Gender"></label>
			<select asp-for="Gender" class="form-control">
					<option>Male</option>
					<option>Female</option>
					<option>Others</option>
			</select>
			<span asp-validation-for="Gender" class="text-danger"></span>

			@*<label for="Gender">Gender</label><br>
			<input type="text" id="Gender"><br>*@
		</div>

		<div class="mb-3">
			<label asp-for="Age"></label>
			<input asp-for="Age" class="form-control" />
			<span asp-validation-for="Age" class="text-danger"></span>
			@*<label for="Age">Age:</label><br>
			<input type="text" id="Age"><br>*@
		</div>

		<div class="mb-3">
			<label asp-for="Phn_Number"></label>
			<input asp-for="Phn_Number" class="form-control" />
			<span asp-validation-for="Phn_Number" class="text-danger"></span>
			@*<input asp-for="BestellungsDatum" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />*@ 
			@*<label for="Phn_Number">Phn_Number:</label><br>
			<input type="text" id="Phn_Number"><br>*@
		</div>

		<div class="mb-3">
			<label for="SelectDoctor">Select Doctor ID for Appointment</label>
			<select name="SelectDoctor" id="SelectDoctor" class="form-control" asp-items="new SelectList(ViewBag.data)" multiple>
			</select>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px;">
			Create
		</button>
		<a asp-controller="Patient" asp-action="Index" class="btn btn-secondary" style="width:150px;">
			Back to List
		</a>
	</div>
</form>
