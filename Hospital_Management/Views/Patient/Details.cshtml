<table class="table table-border table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>
                Doctor ID
            </th>
            <th>
                Doctor Name
            </th>
            <th>
               Doctor Phn_Number
            </th>
            <th>
                Specialist
            </th>
            <th>
                PatientId
            </th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var i in Model)
            {
                    <tr>
                        <td style="color:black;margin:20px;">
                            @i.ID
                        </td>
                        <td style="color:black;margin:20px;">
                            @i.Name
                        </td>
                        <td style="color:black;margin:20px;">
                            @i.Phn_Number
                        </td>
                        <td style="color:black;margin:20px;">
                            @i.Specialist
                        </td>
                        <td style="color:black;margin:20px;">
                            @i.PatientId
                        </td>
                    </tr>  
            }
        }
    </tbody>
</table>
