@{
}
<table class="table table-border table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Bill_Type
            </th>
            <th>
                Bill_Amount
            </th>
            <th>
                date
            </th>

        </tr>
    </thead>
    <tbody>

        @{
            foreach (var i in Model)
            {
                <tr>
                    <td style="color:black;margin:20px;">
                        @i.Id
                    </td>
                    <td style="color:black;margin:20px;">
                        @i.Bill_Type
                    </td>
                    <td style="color:black;margin:20px;">
                        @i.Bill_Amount
                    </td>
                    <td style="color:black;margin:20px;">
                        @i.date
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="PatientBill" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                   
                </tr>
            }
        }
    </tbody>
</table>
<a asp-controller="PatientBill" asp-action="Index" class="btn btn-secondary" style="width:150px;">
    Back
</a>

