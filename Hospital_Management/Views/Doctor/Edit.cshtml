@model Doctor

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pd-2">
			<h2 class="text-primary">Edit Category</h2>
		</div>
		<hr />
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Phn_Number"></label>
			<input asp-for="Phn_Number" class="form-control" />
			<span asp-validation-for="Phn_Number" class="text-danger"></span>
		</div> 
		<div class="mb-3">
			<label asp-for="Specialist"></label>
			<input asp-for="Specialist" class="form-control" />
			<span asp-validation-for="Specialist" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">
			Update
		</button>
		<a asp-controller="Doctor" asp-action="Index" class="btn btn-secondary" style="width:150px;">
			Back to List
		</a>
	</div>
</form>


